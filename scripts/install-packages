#!/usr/bin/sh
# Install sway and desktop programs

sudo pacman -S --noconfirm \
	rsync \
	polkit \
	light \
	alsa-utils \
	sway \
	xdg-utils \
	xdg-desktop-portal-wlr \
	libnotify \
	swayidle \
	swaylock \
	swaybg \
	waybar \
	wtype \
	wl-clipboard \
	grim \
	slurp \
	alacritty \
	mpv \
	imv \
	pavucontrol \
	firefox \
	zathura \
	zathura-pdf-mupdf \
	ttf-hack \
	gnu-free-fonts \
	noto-fonts \
	noto-fonts-emoji \
	noto-fonts-cjk \
